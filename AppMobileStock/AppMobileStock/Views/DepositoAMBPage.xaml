<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobileStock.Views.DepositoAMBPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                   
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtNombre"  Placeholder="Escriba aqui" PlaceholderColor="Gray"></Entry>


            <Label Text="Capacidad" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                   
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtCapacidad"  Placeholder="Escriba aqui" PlaceholderColor="Gray"></Entry>


            <Label Text="Direccion" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                   
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtDireccion"  Placeholder="Escriba aqui" PlaceholderColor="Gray"></Entry>

            <Button Text="Agregar" TextColor="White" BackgroundColor="Blue" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>