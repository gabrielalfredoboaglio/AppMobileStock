<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobileStock.Views.StockPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="STOCK"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Agregar Stock" TextColor="White" BackgroundColor="Blue" Clicked="Button_Clicked_1"></Button>
            <Button Text="Egreso Stock" TextColor="White" BackgroundColor="Blue" Clicked="Button_Clicked_2"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>