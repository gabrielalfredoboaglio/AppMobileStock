<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobileStock.Views.StockABMPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="CodigoArticulo"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtCodigo" Placeholder="Por favor ingrese el Codigo Asignado al Articulo "></Entry>

            <Label Text="IdDeposito"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtIdDeposito" Placeholder="Por favor ingrese el Numero De ID Del Deposito "></Entry>

            <Label Text="Cantidad"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtCantidad" Placeholder="Ingresa la cantidad de stock"></Entry>
            
            <Button Text="Agregar" TextColor="White" BackgroundColor="blue" Clicked="Button_Clicked"></Button>

            <Button Text="Egreso" TextColor="White" BackgroundColor="blue" Clicked="Button_Clicked_1"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>